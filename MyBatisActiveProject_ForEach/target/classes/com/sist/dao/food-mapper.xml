<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.mapper.FoodMapper">
  <select id="foodFindData" resultType="FoodVO" parameterType="hashmap">
    SELECT fno,name,poster,type,address,rownum
    FROM food_location
    WHERE rownum&lt;=40 AND
    <trim prefixOverrides="OR" prefix="(" suffix=")">
    	<!-- trim prefix로 OR 붙일 때 맨 처음 OR은 제거 -->
      <foreach collection="typeArr" item="fd">
        <trim prefix="OR">
          <choose>
           <when test="fd=='N'.toString()">
           	name LIKE '%'||#{ss}||'%'
           </when>
           <when test="fd=='A'.toString()">
           	address LIKE '%'||#{ss}||'%'
           </when>
           <when test="fd=='T'.toString()">
           	type LIKE '%'||#{ss}||'%'
           </when>
          </choose>
        </trim>
      </foreach>
    </trim>
  </select>
  <select id="foodFindCount" resultType="int" parameterType="hashmap">
    SELECT COUNT(*)
    FROM food_location
    WHERE 
    <trim prefixOverrides="OR">
      <foreach collection="typeArr" item="fd">
        <trim prefix="OR">
          <choose>
           <when test="fd=='N'.toString()">
            name LIKE '%'||#{ss}||'%'
           </when>
           <when test="fd=='A'.toString()">
            address LIKE '%'||#{ss}||'%'
           </when>
           <when test="fd=='T'.toString()">
            type LIKE '%'||#{ss}||'%'
           </when>
          </choose>
        </trim>
      </foreach>
    </trim>
  </select>
</mapper>
